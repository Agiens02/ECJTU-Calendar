<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:id="@+id/course_card"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:text="课程"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="节次"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/course_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上课周"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/course_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
