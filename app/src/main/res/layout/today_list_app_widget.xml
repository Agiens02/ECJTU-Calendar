<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:theme="@style/Theme.AppWidget.AppWidgetContainerParent"
    android:id="@android:id/background"
    android:padding="12.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="@style/Widget.AppWidget.AppWidget.Container"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13.0dip"
            android:id="@+id/tv_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课表"
            android:maxLines="1"
            android:maxLength="12"
            style="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:textSize="13.0dip"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.26"
            android:layout_marginEnd="8.0dip"
            android:layout_toStartOf="@id/tv_week_count"
            style="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:textSize="13.0dip"
            android:id="@+id/tv_week_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1周"
            android:layout_marginEnd="8.0dip"
            android:layout_toStartOf="@id/tv_week"
            style="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:textSize="13.0dip"
            android:textColor="?android:colorAccent"
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周六"
            android:layout_alignParentEnd="true"
            style="@style/TextAppearance.AppCompat.Medium" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_below="@id/rl_title">
        <TextView
            android:textSize="12.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="今天"
            android:layout_weight="1.0"
            android:layout_marginEnd="8.0dip" />
        <TextView
            android:textSize="12.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="明天"
            android:layout_weight="1.0"
            android:layout_marginStart="8.0dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4.0dip"
        android:layout_below="@id/ll_title">
        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ListView
                android:id="@+id/lv_course"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="8.0dip" />
            <TextView
                android:textSize="14.0dip"
                android:gravity="center"
                android:id="@+id/empty"
                android:padding="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="💤💤💤\n请去系统设置允许 App 后台运行和自启哦"
                android:lineSpacingExtra="8.0dip"
                android:textAlignment="center" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:alpha="0.5"
            android:layout_marginStart="8.0dip"
            android:layout_marginEnd="8.0dip" />
        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <ListView
                android:id="@+id/lv_course_next_day"
                android:scrollbars="none"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="8.0dip" />
            <TextView
                android:textSize="14.0dip"
                android:gravity="center"
                android:id="@+id/empty_next_day"
                android:padding="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="💤💤💤\n请去系统设置允许 App 后台运行和自启哦"
                android:lineSpacingExtra="8.0dip"
                android:textAlignment="center" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>